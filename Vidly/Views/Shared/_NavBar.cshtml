<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Vidly", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                <li>@Html.ActionLink("Movies", "Index", "Movies")</li>
            </ul>


            @if (User.Identity.IsAuthenticated)
            {
                <form method="post" action="Account/LogOff">
                    @Html.AntiForgeryToken()
                    <button class="btn-link float-right" style="margin-top:12px;">Log Out</button><span class="float-right" style="color:#fff; margin-top:15px;">Hello @User.Identity.Name | </span>
                </form>
            }
            else
            {
                <form method="post" action="Account/Login">
                    @Html.AntiForgeryToken()
                    <button class="btn-link float-right" style="margin-top:12px;">Login</button>

                </form>
            }
        </div>
    </div>
</div>

